<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t :Title %></th>
      <th><%= t :Memo %></th>
      <th><%= t :Author %></th>
      <th><%= t :Picture %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <% show = t :Show %>
        <% edit = t :Edit %>
        <% destroy = t :Destroy %>
        <td><%= link_to "#{show}", book %></td>
        <td><%= link_to "#{edit}", edit_book_path(book) %></td>
        <td><%= link_to "#{destroy}", book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% new = t :New %>
<%= link_to "#{new}", new_book_path %>
